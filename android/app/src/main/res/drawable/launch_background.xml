<?xml version="1.0" encoding="utf-8"?>
<!-- Modify this file to customize your launch splash screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/orange" />
    <!-- Android自带的颜色只有white和black。 -->
    <!-- 把原来的 @android:color/white"中的android:去掉即可自定义的颜色 -->
    <!-- android\app\src\main\res\values下新建一个colors.xml文件 :drawable=@color/orange-->

    <!-- You can insert your own image assets here 解决冷启动时的白屏 -->
    <!-- 注意事项 文件名一定不能写错 -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/blibli" />
    </item>

</layer-list>
